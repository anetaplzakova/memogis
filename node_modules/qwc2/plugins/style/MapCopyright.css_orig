#MapCopyright {
    position: absolute;
    right: 0.5em;
    bottom: 3.5em;
    background-color: rgba(255, 255, 255, 0.5);
    box-shadow: 0 0 4px rgba(136, 136, 136, 0.5);
    backdrop-filter: blur(3px);
    padding: 0.5em 0;
    font-size: x-small;
}

#MapCopyright span {
    padding: 0 0.5em;
}

#MapCopyright span:not(:first-child) {
    border-left: 1px solid @base_fg@;
}
